<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@layout/RounderBackgroundGray"
        android:id="@+id/lvScanItem">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lvScanlblHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Наименование"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lvScanlblBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="кол-во:"/>
                    <TextView
                        android:id="@+id/lvScanlblValueOnStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="на складе:"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lvScanlblBodyValue"
                    android:layout_marginLeft="2dp"
                    android:text="125"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/lvScanbtnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="10px"
            android:layout_marginRight="10px"
            android:textSize="10sp"
            android:minWidth="10px"
            android:minHeight="10px"
            android:text="@string/lvScan_Delete"
        />
    </LinearLayout>
</FrameLayout>